<h2>Create new track:</h2>

<%= form_for @track do |t| %>

    <br>Name:
    <br><%= t.text_field :name %>
    <br>Artist:
    <br><%= t.text_field :artist %>
    <br>Album:
    <br><%= t.text_field :album %>
    <br>URL:
    <br><%= t.text_field :url %>

    <br>
    <h5>Tags: </h5>

    <% Tag.all.each do |tag| %>

        <%= check_box_tag "track[tag_ids][]", tag.id  %>
        <%= tag.name %>
        <br>
    <% end %>
    
    <%= t.submit "Create track" %>
<% end %>